<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="64dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/random_user_detailed_imageView"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detailed_info_text_size"
        android:layout_marginTop="16dp"
        android:id="@+id/random_user_detailed_name_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detailed_info_text_size"
        android:layout_marginTop="12dp"
        android:id="@+id/random_user_detailed_username_textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/detailed_info_text_size"
        android:layout_marginTop="12dp"
        android:id="@+id/random_user_detailed_location_textView" />

</LinearLayout>